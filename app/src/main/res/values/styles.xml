<resources>

    <style name="MyAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/colorError</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="MyAppTheme.NoActionBar" parent="MyAppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextFieldBoxesStyle" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="primaryColor">@color/colorAccent</item>
        <item name="secondaryColor">#61FFFFFF</item>
        <item name="errorColor">@color/colorError</item>
        <item name="helperTextColor">@color/colorWhite</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>
    <style name="Toolbar.main" parent="Toolbar">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="Toolbar.profile" parent="Toolbar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="TextLimitStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="TextLimitError" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/colorError</item>
        <item name="counterEnabled">true</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Material.Dialog">
        <item name="android:textColor">@color/colorBlack</item>
<!--        <item name="android:headerDividersEnabled">true</item>-->
    </style>

</resources>
