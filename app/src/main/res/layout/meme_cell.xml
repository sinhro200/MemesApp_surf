<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <ImageView
            android:id="@+id/mcell_mainImage_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/meme_cell_main_image" />

    <TextView
            android:id="@+id/mcell_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:orientation="horizontal"
            >

        <ImageView
                android:contentDescription="@string/like_meme"
                android:id="@+id/mcell_like_iv"
                android:layout_width="24dp"
                android:layout_height="24dp" />
        <ImageView
                android:contentDescription="@string/share_meme"
                android:id="@+id/mcell_share_iv"
                android:layout_width="24dp"
                android:layout_height="24dp" />
    </LinearLayout>

</LinearLayout>